<%= content_tag :div, class: "nested-fields", data: { new_record: form.object.new_record? } do %>
  <div class="row"> 
    <div class="col-lg-3">
      <div class="form-group">
        <%= form.label :distribution_type %>
        <%= form.select(:distribution_type, options_for_select(distribution_types ), { hide_label: true, :include_blank => true}, { class: 'form-control', :tabindex => "0" }) %>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="form-group">
        <%= form.label :amount %>  
        <%= form.number_field :amount, class: 'form-control', step: 0.01 %>  
      </div>
    </div>
    <div class="col-lg-3">
      <div class="form-group">
        <%= form.label :distribution_date %>  
        <%= form.date_field :distribution_date, class: 'form-control' %>  
      </div>
    </div>
    <small><%= link_to "x", "#", data: { action: "click->nested-form#remove_association" } %></small>
    <%= form.hidden_field :_destroy %>
    <% if @deal.id.present? %>
      <%= form.hidden_field :capital_account_id, :value => @deal.id %>
    <% end %>
  </div>
<% end %>

